  script.
      function toggleFormPage() {
        console.log('clicked')
        var formPage = document.getElementById('formPage');
        if (formPage.style.display === 'grid') {
          formPage.style.display = 'none';
        } else {
          formPage.style.display = 'grid';
        }
      }