doctype html
html
  head
    title= title
    style.
      body{
        margin: 0px;
        height: 100%;
        width: 100%;
        background-color: #FFFBFF;
      }
      #posts{
        width: 100%;
        height: 100%;
        background-color: #f1dabf;
        border-radius: 4px;
      }
      #postBody{
        display: grid;
        gap: 10px;
        width: 100%;
        min-width: 200px;
        min-height: 100px;
        height: 100%;
        justify-content: center;
        align-content: space-evenly;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        
      }
  body
    h1= message
    div#postBody
      each item in items
        div#posts
          each value, key in item
            div #{key}: #{value}




  form(action="/new", method="GET")
      label(for="title") Title:
      input(type="text", id="title", name="title")
      br
      label(for="user") User:
      input(type="user", id="user", name="user")
      br
      label(for="message") Message:
      input(type="message", id="message", name="message")
      br
      button(type="submit") Submit