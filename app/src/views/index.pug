doctype html
html
  head
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet")
    title= title
    style.
      body, html{
        font-family: "Roboto Mono", monospace;
        font-optical-sizing: auto;
        font-weight: <weight>;
        font-style: normal;
        margin: 0;
        height: 100%;
        width: 100%;
        background-color: #FFFBFF;
      }
      #posts{
        width: 100%;
        height: 100%;
        border: 1px solid #fffbff;
        max-width: 500px;
        border-radius: 10px;
        display: grid;
        color: #fffbff;
      }
      #postBody{
        display: grid;
        margin-left: 20px;
        margin-right: 20px;
        gap: 10px;
        height: 100%;
        justify-content: center;
        align-content: start;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        background-color: #282a2e;
        border-radius: 20px;
        padding: 20px;
      }
      #form{
        z-index: 2;
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        display: grid;
      }
      #formPage{
        z-index: 2;
        height: 100%;
        width: 100%;
        position: absolute;
        top:0%;
        left:0%;
        display: none;
        align-items: center;
        justify-items: center;
        backdrop-filter: blur(5px);
        
      }
      #message{
        height: 100px;
        overflow: ;

      }
      #addButton{
        background: none;
        border: 1px solid black;
        border-radius: 100%;
        height: 50px;
        width: 50px;
        justify-self: center;
        font-size: 1em;
        cursor: pointer;
      }
      #cancelButton{
        position: relative;
        background: none;
        border: 1px solid black;
        border-radius: 100%;
        height: 30px;
        width: 30px;
        justify-self: end;
        font-size: .8em;
        top: -18px;
        right: -18px;
        cursor: pointer;
      }
      #addButton:hover{
        background-color: #eee5e5;
      }
      #footer{
        display: grid;
        align-items: center;
        justify-items: center;
        grid-auto-flow: column;
        height: 40px;

      }
      #footerlink{
        text-decoration: none;
        color: inherit;
        text-shadow: 1px 1px #eee5e5;
        
      }
      #header{
        height: 80px;
        width: 100%;
        font-size: 2em;
        font-weight: bold;
        display: grid;
        grid-auto-flow: column;
        grid-template-columns: .1fr 8fr .7fr;
        align-items: center;
      }
      #innerform{
        display: grid;

      }
      #addMsgButton{
        background: none;
        border: 1px solid black;
        cursor: pointer;
        font-size: 1em;
        font-weight:: bold;
        height: 40px;
        border-radius: 10px;
      }
  body
